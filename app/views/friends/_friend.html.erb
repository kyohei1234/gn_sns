<li class="span4">
  <div class="item">
    <!-- Team member image -->
    <!-- img-circleクラスを設定 -->
    <%= profile_image_for friend, class: "img-circle" %>

    <!-- Team memeber details, activated on hover -->
    <div class="about-overlay img-circle">
     <div class="social-icons sicon-white">
        <%= link_to '#', class: "sicon-facebook" do %>
          <i>Faceook</i>
        <% end %>
        <%= link_to '#', class: "sicon-twitter" do %>
          <i>Twitter</i>
        <% end %>
     </div>
    </div>
  </div>
  <!-- Team member name and function -->
  <h5>
    <%= link_to friend.title, friend %><br/>
  </h5>
</li>