.row
  .span6.offset3
    = form_for @user.boards.build do |f|
      .field
        = f.label :title
        %br/
        = f.text_field :title
      .field
        = f.label :body
        %br/
        = f.text_field :body
      %div
        = f.label :image
        %br/
        = f.file_field :image
      = f.hidden_field :user_id
      .actions
        = f.submit "投稿"
      = link_to "board一覧へ", boards_path
