%p#notice= notice
.main_container
  .board_image
    = board_image_for @board
  %p
    %strong Title:
    = @board.title
  %p
    %strong Contents:
    = @board.body
.opinions_box
  .posted_opinions
    - i = 0
    - @board.opinions.each do |b|
      .opinion_number= i += 1
      .information_container
        %p.opinion_name= b.name
        %p.opinion_created_time= b.created_at
      .board_opinion
        = b.body
  .content_wrapper
    = form_for @board.opinions.build do |f|
      = f.hidden_field :board_id
      .field
        = f.label :name, "Name"
        %br/
        = f.text_area :name
      .field
        = f.label :body, "Opinion"
        = f.text_field :body
      .actions
        = f.submit "登録する"
= link_to 'Edit', edit_board_path(@board)
|
\#{link_to 'Back', boards_path}
