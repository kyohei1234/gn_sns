= form_for(@blog) do |f|
  - if @blog.errors.any?
    #error_explanation
      %h2
        = pluralize(@blog.errors.count, "error")
        prohibited this blog from being saved:
      %ul
        - @blog.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .field
    = f.label :image
    %br/
    = f.file_field :image
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .actions
    = f.submit
