%body
  #page-blog-list.pages.page-blog-list
    .container
      %p#notice= notice
      / Header
      %header
        %h4.line-divider Diary
        / <h1>Leaders Relay Diary</h1>
        %h1= @blog.title
        .row
          .span8.offset2
            .input-append
              %input#appendedInputButton.span5{:placeholder => "Search Blog", :type => "text"}/
              %button.btn.btn-primary.sicon-search.sicon-white{:type => "button"}
                %i Search
      / End Header
      .row-fluid
        .span8.blog-details
          / Article
          %article
            / Blog image
            = blog_image_for @blog
            / Blog title
            %h5
              = @blog.title
              %br/
              - if @blog.user
                %small
                  Posted By Admin, Written By #{link_to "#{@blog.user.username}", "#"}
              - else
                %small
                  Posted By Admin, Written By #{link_to "no_name", "#"}
              = @blog.created_at.strftime('%Y/%m/%d')
              / ここにリレータイトルを入れたい！！
              / <a href="#">Photography</a>
            / Blog post description
            = @blog.body
            %hr/
          / End Article
          / Blog comments
          .comments
            = @comments.count
            = "comments".pluralize
          .comments-details
            .scroll-box
              .scroll-box-inner
                - @comments.each do |comment|
                  .media
                    .pull-left
                      / 投稿者の画像
                    .media-body
                      .comments-post-info
                        %small
                          - if comment.user.nil?
                            no_name
                          - else
                            = link_to "#{comment.user.name}", "#"
                          = comment.created_at
                      %p
                        = comment.body
            #write-replay.write-comment
              %h6 Drop a comment
              .row-fluid
                .span8
                  = form_for @blog.comments.build do |f|
                    = f.hidden_field :blog_id
                    .field.float-field
                      = f.text_area :body
                    .actions
                      = f.submit "Post!", class: "btn btn-primary"
          / End Blog comments
        / 最新記事を載せる５件まで
        .span4.blog-list-right
          / Latest blog posts block
          .block
            %h6 Lates blog posts
            %ul.simple-link-list
              - @blogs.each do |blog|
                %li
                  = link_to "#{blog.title}", blog_path(blog)
          / Tags
          .block
            %h6 Topics
            %nav.submenu
              %ul
                %li
                  %a.active{:href => "./blog.html"} All
                %li
                  %a{:href => "./blog.html"} Traditionl Food
                %li
                  %a{:href => "./blog.html"} Club Activeities
                %li
                  %a{:href => "./blog.html"} Traditional Festival
