<div class="pages page-blog-list" id="page-blog-list">
  <div class="container">
    <p id="notice"><%= notice %></p>
    <!-- Header -->
    <header>
        <h4 class="line-divider">Diary</h4>
        <!-- <h1>Leaders Relay Diary</h1> -->
        <h1><%= @blog.title %></h1>
        <div class="row">
            <div class="span8 offset2">
                <div class="input-append">
                  <input class="span5" id="appendedInputButton" type="text" placeholder="Search Blog">
                  <button class="btn btn-primary sicon-search sicon-white" type="button"><i>Search</i></button>
                </div>
            </div>
        </div>
    </header>
    <!-- End Header -->
    <div class="row-fluid">
      <div class="span8 blog-details">
        <!-- Article -->
          <article>
            <!-- Blog image -->
            <%= blog_image_for @blog %>
            <!-- Blog title -->
            <h5>
              <%= @blog.title %><br/>
              <% if @blog.user %>
                <small>Posted By Admin, Written By <%= link_to "#{@blog.user.username}", "#" %>
              <% else %>
                <small>Posted By Admin, Written By <%= link_to "no_name", "#" %>
              <% end %>
              <%= @blog.created_at.strftime('%Y/%m/%d')%>

              <!-- ここにリレータイトルを入れたい！！ -->
              <!-- <a href="#">Photography</a> -->
              </small>
            </h5>
            <!-- Blog post description -->
            <%= @blog.body %>
            <hr />            
          </article>
          <!-- End Article -->
          <!-- Blog comments -->
          <div class="comments">
              <%= @comments.count %> <%= "comments".pluralize %>
          </div>
          <div class="comments-details">
            <div class="scroll-box">
              <div class="scroll-box-inner">
                <% @comments.each do |comment| %>
                  <div class="media">
                    <div class="pull-left">
                      <!-- 投稿者の画像 -->
                    </div> 
                    <div class="media-body">
                      <div class="comments-post-info">
                        <small>
                          <% if comment.user.nil? %>
                            no_name
                          <% else %>
                            <%= link_to "#{comment.user.name}", "#" %>
                          <% end %>
                          <%= comment.created_at %>
                        </small>
                      </div>
                        <p>
                          <%= comment.body %>
                        </p>    
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="write-comment" id="write-replay">
              <h6>Drop a comment</h6>
              <div class="row-fluid">
                <div class="span8">
                  <%= form_for @blog.comments.build do |f| %>
                  <%= f.hidden_field :blog_id %>
                    <div class="field float-field">
                      <%= f.text_area :body%>
                    </div>
                    <div class="actions">
                      <%= f.submit "Post!", class: "btn btn-primary" %>
                    </div>
                  <% end %>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <!-- End Blog comments -->
        </div>
          <!-- 最新記事を載せる５件まで -->
        <div class="span4 blog-list-right">
          <!-- Latest blog posts block -->
          <div class="block">
              <h6>Lates blog posts</h6>
              <ul class="simple-link-list">  
                <% @blogs.each do |blog| %>                            
                  <li>
                    <%= link_to "#{blog.title}", blog_path(blog) %>
                  </li>
                <% end %>
              </ul>
          </div>
          <!-- Tags -->
          <div class="block">
            <h6>Topics</h6>
            <nav class="submenu">
              <ul>
                <li>
                    <a href="./blog.html" class="active">All</a>
                </li>
                <li>
                    <a href="./blog.html">Traditionl Food</a>
                </li>
                <li>
                    <a href="./blog.html">Club Activeities</a>
                </li>
                <li>
                    <a href="./blog.html">Traditional Festival</a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END PAGE | BLOG -->
