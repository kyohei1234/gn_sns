<!DOCTYPE html>
<html>
<head>
  <title>GnSns</title>
  <%= stylesheet_link_tag "application", media: 'all' %>
  <%= csrf_meta_tags %>
  <!-- META DATA -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">

  <meta name="description" content="Treble theme - One Page Responsive Theme - Gridelicious.net">
  <title>Treble - One Page Responsive Theme - Gridelicious.net</title>

  <!-- STYLESHEETS -->
  <!-- <link rel="stylesheet" href="assets/bootstrap.css" type="text/css" /> -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <!-- GOOGLE WEB FONTS -->
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,700,600,300,800' rel='stylesheet' type='text/css'>
</head>
<!-- NAVIGATION -->
<body>
  <nav class="fixed-top" id="navigation">
    <div class="container">

      <div class="row-fluid">
        <div class="span12 center">
          <!-- END LOGO -->

          <div class="header_logo">
            <%= link_to image_tag('landing/gnlf_png.png', "width"=>"78", "height"=>"26"), root_path %>

          </div>

          <!-- MOBILE MENU BUTTON -->
          <div class="mobile-menu" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </div>
          <!-- END MOBILE MENU BUTTON -->

          <!-- MAIN MENU -->
          <ul id="main-menu" class="nav-collapse collapse">
            <li><%= link_to "Home", "#page-welcome" %></li>
            <li><%= link_to "Friends","#page-friends" %></li>
            <li><%= link_to "Blogs","#page-blogs" %></li>
            <li><%= link_to "Sponsors","#page-sponsors" %></li>
            <li><%= link_to "Boards","#page-boards" %></li>
            <li><%= link_to "Information","#page-information" %></li>
<!-- 
                        <li><a href="#page-welcome">Home</a></li>
                        <li><a href="#page-work">Friends</a></li>
                        <li><a href="#page-features">Diary</a></li>
                        <li><a href="#page-blog">Blog</a></li>
                        <li><a href="#page-contact">Contact</a></li> -->
                      </ul>
                      <!-- END MAIN MENU -->

                      <!-- SOCIAL ICONS -->
                      <div class="social-icons hover-big pull-right">
                        <%= link_to "https://www.facebook.com/groups/151692711639352/" do %>
                          <i class="fa fa-facebook-official fa-3"></i>
                        <% end %>
                        <%= link_to "#" do %><i class="fa fa-twitter"></i><% end %>
                      </div>
                      <!-- END SOCIAL ICONS -->
                    </div>
                  </div>
                </div>
              </nav>
              <!-- END NAVIGATION -->
              <% if notice %>
                <p class="alert alert-success"><%= notice %></p>
              <% end %>
              <% if alert %>
                <p class="alert alert-danger"><%= alert %></p>
              <% end %>
              <%= yield %>

              <!-- PAGE | CONTACT -->
              <div class="pages black-bg white page-information" id="page-information">
                <div class="container">
                 
                  <!-- Header -->
                  <header>
                    <h4 class="line-divider">Information</h4>
                    <div class="row">
                      <div class="span8 offset2">
                        <p>
                          We like to create things with fun, open-minded people. Feel free to say hello! We'll respond as soon as possible.
                        </p>
                      </div>
                    </div>
                  </header>
                  <!-- End Header -->

                  <!-- Start Article -->
                  <article>
                    <div class="row-fluid">
                      <!-- End Contact form -->
                      <!-- Contact information -->
                      <div class="span5 offset1">
                        <h5>Meet Us</h5>
                        <div class="media">
                          <div class="social-icons sicon-white pull-left">
                            <%= link_to "Phone" ,"#" , class: "sicon-phone" %><i>Phone</i>
                          </div> 
                          <div class="media-body smallFontBy08">
                            (+1) 502 964-0393 | (+1) 502 964-0393 (FAX)
                          </div>
                        </div>
                        <div class="media">
                          <div class="social-icons sicon-white pull-left">
                            <%= link_to "Location" ,"#" , class: "sicon-place" %><i>Location</i>
                          </div> 
                          <div class="media-body smallFontBy08">
                            1095 Columbus Ave., San Francisco, CA 94133
                          </div>
                        </div>
                        <div class="media">
                          <div class="social-icons sicon-white pull-left">
                            <%= link_to "email" ,"#" , class: "sicon-mail" %><i>Email</i>
                          </div> 
                          <div class="media-body smallFontBy08">
                            mail@crollify.com
                          </div>
                        </div>
                        <div class="media">
                          <div class="social-icons sicon-white pull-left">
                            <%= link_to "Time Zone" ,"#" , class: "sicon-clock" %><i>Time Zone</i>
                          </div> 
                          <div class="media-body smallFontBy08">
                            UTC / GMT -5
                          </div>
                        </div>
                        <br/>
                        <br/>
                        <br/>
                        <h5>Get social</h5>
                        <div class="social-icons sicon-white bordered">
                          <%= link_to "" ,"https://www.facebook.com/groups/151692711639352/", class: "sicon-facebook" %><i>Facebook</i>
                          <%= link_to "" ,"" , class: "sicon-twitter" %><i>Twitter</i></a>
                        </div>
                      </div>
                      <!-- End Contact information -->
                    </div>
                  </article>
                  <!-- End Article -->

                </div>

                <!-- Background map image -->
                <div id="map-image">
                  <!-- <img src="assets/images/pages/contact/map_bck.jpg" alt="Treble"> -->
                </div>
              </div>
              <!-- END PAGE | CONTACT -->

              <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
              <!-- GOOGLE ANALYTICS -->
